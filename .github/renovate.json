{
  "extends": ["config:base"],
  "semanticCommits": true,
  "packageRules": [
     {
       "updateTypes": ["minor", "patch"],
       "matchDatasources": ["docker"],
       "versioning": "semver",
       "semanticCommits": true
     }
  ],
  "monorepo": {
     "mainFile": "./website/Dockerfile",
     "packages": {
       "packages/*": {
         "mainFile": "./package.json"
       },
       "website": {
         "mainFile": "./Dockerfile"
       }
     }
  }
 }